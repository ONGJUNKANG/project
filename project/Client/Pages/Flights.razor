@page "/Flights"
@inject NavigationManager NavigationManager

    <div id="test" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#test" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#test" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#test" data-bs-slide-to="2" aria-label="Slide 3"></button>
            <button type="button" data-bs-target="#test" data-bs-slide-to="3" aria-label="Slide 4"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active ">
                <img src="/Images/Main Menu/City.jpg" class=" d-block w-100  " alt="1">
            </div>
            <div class="carousel-item">
                <img src="/Images/Main Menu/Flight.jpg" class=" d-block w-100  " alt="2">
            </div>
            <div class="carousel-item ">
                <img src="/Images/Main Menu/MiniVan.jpg" class="d-block w-100  " alt="3">
            </div>
            <div class="carousel-item">
                <img src="/Images/Main Menu/NightScape.jpg" class="d-block w-100  " alt="4">
            </div>
        </div>
        <a class="carousel-control-prev" type="button" data-bs-target="#test" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </a>
        <a class="carousel-control-next" type="button" data-bs-target="#test" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </a>

    </div>


    <h3>Flights</h3>


    <body>
        <div class="row">
            <div class="row-md-4">
                <br>

                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Destination">Leaving Form</label>
                    <input asp-for="Input.Destination" class="form-control" />
                    <span asp-validation-for="Input.Destination" class="text-danger"></span>
                </div>

                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Destination">Going To</label>
                    <input asp-for="Input.Destination" class="form-control" />
                    <span asp-validation-for="Input.Destination" class="text-danger"></span>
                </div>

                <br>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Departing">Departing</label>
                    <input asp-for="Input.Departing" class="form-control" />
                    <span asp-validation-for="Input.Departing" class="text-danger"></span>
                </div>

                <br>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Returning">Returning</label>
                    <input asp-for="Input.Returning" class="form-control" />
                    <span asp-validation-for="Input.Returning" class="text-danger"></span>
                </div>

                <button class="btn btn-primary" @onclick="Payment">Payment</button>
            </div>
        </div>
    </body>

    @code {
        private void Index(MouseEventArgs e)
        {
            NavigationManager.NavigateTo("/");
        }
        private void traveltip(MouseEventArgs e)
        {
            NavigationManager.NavigateTo("/TravelTip");
        }
        private void Car(MouseEventArgs e)
        {
            NavigationManager.NavigateTo("Car");
        }
        private void Packages(MouseEventArgs e)
        {
            NavigationManager.NavigateTo("Packages");
        }
        private void Payment(MouseEventArgs e)
        {
            NavigationManager.NavigateTo("Payment");
        }
    }
